    <ImageButton
        android:id="@+id/imageButton_mainScreen_playOfflineButton"
        android:layout_width="129dp"
        android:layout_height="51dp"
        android:layout_marginTop="120dp"
        android:foreground="@drawable/play_offline_button"
        android:layoutDirection="ltr"
        android:onClick="goToOfflineGameScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButton_mainScreen_duelButton"
        app:layout_constraintTop_toBottomOf="@+id/imageView_mainScreen_chosenSkin"
        app:srcCompat="@drawable/play_offline_button" />

    <ImageButton
        android:id="@+id/imageButton_mainScreen_settingsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="517dp"
        android:background="@color/black"
        android:onClick="goToSettingsScreen"
        android:src="@drawable/settings_button"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontalDown"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="@+id/guidelineVerticalLeft"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontalUp" />


    <ImageButton
        android:id="@+id/imageButton_mainScreen_skinsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="517dp"
        android:background="@color/black"
        android:foreground="@drawable/skins_screen_button_image"
        android:onClick="goToSkinsScreen"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontalDown"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="@+id/guidelineVerticalLeft"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontalUp"
        app:layout_constraintVertical_bias="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontalDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVerticalRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.99" />

    <TextView
        android:id="@+id/textView_mainScreen_usernameGreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/coming_soon"
        android:text="Hey, User"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontalDown"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="@+id/guidelineVerticalLeft"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontalUp"
        app:layout_constraintVertical_bias="0.017" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVerticalMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/imageView_mainScreen_menuThreeDots"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:onClick="showPopup"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontalUp"
        app:srcCompat="@drawable/main_screen_menu" />

    <ImageView
        android:id="@+id/imageView_mainScreen_rightArrow"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:foreground="@drawable/arrow"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_mainScreen_skinsButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageButton_mainScreen_skinsButton"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_mainScreen_skinsButton" />

    <ImageView
        android:id="@+id/imageView_mainScreen_leftArrow"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:foreground="@drawable/arrow"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_mainScreen_settingsButton"
        app:layout_constraintStart_toStartOf="@+id/imageButton_mainScreen_settingsButton"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_mainScreen_settingsButton" />

    <ImageView
        android:id="@+id/imageButton_mainScreen_duelButton"
        android:layout_width="129dp"
        android:layout_height="51dp"
        android:foreground="@drawable/duel_button"
        android:onClick="openDuelDialog"
        app:layout_constraintEnd_toStartOf="@+id/imageButton_mainScreen_playOfflineButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButton_mainScreen_playOfflineButton" />


</androidx.constraintlayout.widget.ConstraintLayout>